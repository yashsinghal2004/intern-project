
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Round {
  id                String   @id @default(cuid())
  createdAt         DateTime @default(now())
  status            String   // CREATED | STARTED | REVEALED
  // Fairness
  nonce             String
  commitHex         String
  serverSeed        String?
  clientSeed        String
  combinedSeed      String
  pegMapHash        String
  // Game
  rows              Int
  dropColumn        Int
  binIndex          Int
  payoutMultiplier  Float
  betCents          Int
  pathJson          String   // JSON string of decisions per row
  revealedAt        DateTime?
}

